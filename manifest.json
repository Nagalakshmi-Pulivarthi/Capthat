{
  "manifest_version": 3,
  "name": "CapThat!",
  "version": "1.0.0",
  "description": "Capture images from any webpage to your Mood Board",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Capture Board"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content-style.css"]
    }
  ],
  "icons": {
    
  }
}
